    <activity
        android:name="com.cnbit.nimmasarkara.ui.activity.FullScreenPhotoActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name="com.cnbit.nimmasarkara.ui.activity.AboutUsActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name="com.cnbit.nimmasarkara.ui.activity.EventsListActivity"
        android:label="@string/title_activity_events_list"
