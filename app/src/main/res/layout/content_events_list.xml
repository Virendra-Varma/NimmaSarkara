<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cnbit.nimmasarkara.ui.activity.EventsListActivity"
    tools:showIn="@layout/activity_events_list"
    >
  <android.support.v7.widget.RecyclerView
      android:id="@+id/events_rv"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />
  <include layout="@layout/layout_progress_state"/>
  <include layout="@layout/layout_empty_state"/>
  <include layout="@layout/layout_error_state"/>
</FrameLayout>
