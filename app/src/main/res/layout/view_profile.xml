<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rela"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/profilebg" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:src="@mipmap/backblack" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="?actionBarSize"
        android:background="#636363" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="Profile"
        android:textColor="#000"
        android:textSize="18dp" />

    <View
        android:id="@+id/viewable"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/background"
        android:background="#8e696969" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/rate"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/star" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view1"
        android:layout_marginRight="20dp"
        android:id="@+id/share"
        android:layout_marginTop="50dp"
        android:src="@drawable/share" />

    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/view1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/propicsample" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilepic"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="George Clooney"
        android:textColor="#363636"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="Tirupati, Andhra Pradesh, India"
        android:textColor="#696969"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="7">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:src="@drawable/twitterbla" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:src="@drawable/instabla" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:src="@drawable/faceblack" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/background"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <TextView
                    android:id="@+id/imagesposted"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circlebg"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imagesposted"
                    android:layout_alignTop="@+id/imagesposted"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imagesposted"
                    android:gravity="center"
                    android:text="Images"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/text"
                    android:layout_alignTop="@+id/text"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/text"
                    android:gravity="center"
                    android:text="Posted"
                    android:textSize="13sp" />

            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">


                <TextView
                    android:id="@+id/videosposted"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circlebg"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/videosposted"
                    android:layout_alignTop="@+id/videosposted"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/videosposted"
                    android:gravity="center"
                    android:text="Videos"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/text1"
                    android:layout_alignTop="@+id/text1"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/text1"
                    android:gravity="center"
                    android:text="Posted"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/r3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">


                <TextView
                    android:id="@+id/audiosposted"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circlebg"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/audiosposted"
                    android:layout_alignTop="@+id/audiosposted"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/audiosposted"
                    android:gravity="center"
                    android:text="Audios"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/text2"
                    android:layout_alignTop="@+id/text2"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/text2"
                    android:gravity="center"
                    android:text="Posted"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>