<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewItemGrid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_margin="@dimen/spacing_small"
    app:cardElevation="@dimen/spacing_small"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >


    <ImageView
        android:id="@+id/image_sai"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:contentDescription="@string/sai_image"
        android:scaleType="centerCrop"
        android:visibility="visible"
        />
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_xsmall"

        android:layout_below="@id/image_sai"
        android:layout_margin="5dp"
        android:textColor="#646464"
        android:layout_marginTop="@dimen/spacing_medium"
        android:drawablePadding="@dimen/spacing_medium"
        android:gravity="center_vertical"
        android:maxWidth="130dp"
        android:textSize="@dimen/caption_size"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_sai"
        android:textColor="#6c6c6c"
        android:layout_alignRight="@id/image_sai"
        android:layout_marginLeft="@dimen/spacing_medium"
       android:layout_margin="5dp"
        android:textSize="@dimen/caption_size"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginTop="1dp"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"

        android:maxLines="1"
        android:textSize="@dimen/body_size"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/spacing_medium"
        android:orientation="horizontal"
        android:weightSum="2"
        >

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="horizontal"
          >
        <TextView
            android:id="@+id/txtUpVoteItemGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/like_empty"
            android:drawablePadding="@dimen/spacing_medium"
            android:drawableRight="@drawable/like_empty"
            android:gravity="center"
            android:padding="@dimen/spacing_medium"
            android:textSize="@dimen/x_caption_size"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="horizontal"
          >
        <TextView
            android:id="@+id/txtCommentsItemTechGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_xsmall"
            android:drawableEnd="@drawable/comment_empty"
            android:drawablePadding="@dimen/spacing_medium"
            android:drawableRight="@drawable/comment_empty"
            android:gravity="center"
            android:padding="@dimen/spacing_medium"
            android:textSize="@dimen/x_caption_size"
            />
      </LinearLayout>
    </LinearLayout>
  </RelativeLayout>
</android.support.v7.widget.CardView>

